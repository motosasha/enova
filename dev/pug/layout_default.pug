//- Стандартный шаблон страницы
include mixins.pug

- var isMainPage = false;
- var pageMainPT = true;

block variables

doctype html
html(class='no-js', lang='ru-RU')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, user-scalable=yes, initial-scale=1, maximum-scale=3, minimum-scale=0.1')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		meta(name='format-detection', content='telephone=no')
		meta(name='format-detection', content='date=no')
		meta(name='format-detection', content='address=no')
		meta(name='format-detection', content='email=no')
		meta(name='google', content='notranslate')
		meta(name='HandheldFriendly' content='true')
		meta(name='robots', content='index, follow')

		link(rel='apple-touch-icon' sizes='180x180' href='img/favicon/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='img/favicon/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='img/favicon/favicon-16x16.png')
		link(rel='manifest' href='img/favicon/site.webmanifest')
		link(rel='mask-icon' href='img/favicon/safari-pinned-tab.svg' color='#33cc99')
		meta(name='apple-mobile-web-app-title' content='Enova')
		meta(name='application-name' content='Enova')
		meta(name='msapplication-TileColor' content='#33cc99')
		meta(name='theme-color' content='#003333')

		link(rel='preconnect', href='https://fonts.googleapis.com')
		link(rel='preconnect', href='https://fonts.gstatic.com' crossorigin='')
		link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap', rel='stylesheet')

		block title
			title «Энова» — современная нефтетрейдинговая компания

		block meta
			meta(name='description', content='')
			meta(name='keywords', content='')

		block head
			link(rel="stylesheet" href="css/style.css")

	body(data-state)
		noscript У вас отключен JavaScript. Это пугает.

		.page
			.page__nav
				+side-nav
			.page__header
				+header
			.page__main(class= pageMainPT ? 'page__main_pt': '')
				block pageMain
					.fake-content fake-content
			.page__footer
				+footer

		+popup_callback
		+popup_thanks

		block templates

		script(src='js/hystmodal.min.js')
		script(src='js/main.js')
		//- script(src="https://unpkg.com/@googlemaps/markerclusterer/dist/index.min.js")

		block scripts
