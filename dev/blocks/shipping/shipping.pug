//- Все примеси в этом файле должны начинаться c имени блока (shipping)

mixin shipping(mod, pipe, truck, tank)
	.shipping(class= mod)
		.shipping__title Способы отгрузки:
		.shipping__inner
			.shipping__item(data-tippy-content='Описание отгрузки', class= pipe ? 'shipping__item_active': '')
				svg.shipping__icon
					use(xlink:href='img/svgSprite.svg#icon__solid_pipe')
			.shipping__item(data-tippy-content='Описание отгрузки', class= truck ? 'shipping__item_active': '')
				svg.shipping__icon
					use(xlink:href='img/svgSprite.svg#icon__solid_truck')
			.shipping__item(data-tippy-content='Описание отгрузки', class= tank ? 'shipping__item_active': '')
				svg.shipping__icon
					use(xlink:href='img/svgSprite.svg#icon__solid_tank')
