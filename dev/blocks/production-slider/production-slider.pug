//- Все примеси в этом файле должны начинаться c имени блока (producion-slider)

mixin production-slider(slides)
	.production-slider.swiper
		.production-slider__inner.swiper-wrapper
			each slide in slides
				.production-slider__slide.swiper-slide
					+product-tile(slide.title, slide.subtitle, slide.icon, slide.sum, slide.pipe, slide.truck, slide.tank)
		.production-slider__pagination.swiper-pagination
