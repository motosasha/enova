//- Все примеси в этом файле должны начинаться c имени блока (form)

mixin form_filter(mod)
	form.form(class= mod)
		.form__row
			.form-field
				label.form-field__label Вид топлива
				+select('', [
					{'label': 'Выберите виды', 'value': 'all'},
					{'label': 'Бензин', 'value': '1'},
					{'label': 'Дизельное топливо', 'value': '2'},
					{'label': 'Керосин', 'value': '3'},
					{'label': 'Сжиженный углеводородный газ', 'value': '4'}
				], 'type')
		.form__row
			.form-field
				.form-field__label Способ отгрузки
				.form-field__row.form-field__row_checks
					label.checkbox
						input.checkbox__input(type='checkbox', value=2, name='shipment')
						.checkbox__inner
							svg.checkbox__check
								use(xlink:href='img/svgSprite.svg#icon__check')
							.checkbox__label Автомобить
					label.checkbox
						input.checkbox__input(type='checkbox', value=3, name='shipment')
						.checkbox__inner
							svg.checkbox__check
								use(xlink:href='img/svgSprite.svg#icon__check')
							.checkbox__label Железная дорога
		.form__row
			.form-field
				label.form-field__label Цена за тонну (₽)
				.form-field__row.form-field__row_fields
					input.input.input_currency(type='text', name="from", placeholder='от')
					input.input.input_currency(type='text', name="to", placeholder='до')
		.form__row
			label.form-field
				.form-field__label Область
				+select('', [
					{'label': 'Все области', 'value': 'all'},
					{'label': 'Область 1', 'value': 1},
					{'label': 'Область 2', 'value': 2},
					{'label': 'Область 3', 'value': 3}
				], 'region')
		.form__row
			label.form-field
				.form-field__label Базис
				+select('', [
					{'label': 'Выберите базис', 'value': 'all'},
					{'label': 'Базис 1', 'value': 1},
					{'label': 'Базис 2', 'value': 2},
					{'label': 'Базис 3', 'value': 3}
				], 'basis')
		.form__footer
			button.button.button_tertiary.form__button.js-reset-form(type="button") Сбросить
			button.button.form__button Применить

